datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id       Int       @id @default(autoincrement())
  username String    @unique
  email    String?   @unique
  password String
  documents Document[]
}

model Document {
  id        Int      @id @default(autoincrement())
  title     String
  filePath  String
  uploadedAt DateTime @default(now())
  userId    Int
  user      User     @relation(fields: [userId], references: [id])
}
